@model IEnumerable<AssetManagement.Models.SearchResult>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
    <p>
        Search Term: @Html.TextBox("searchTerm")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Asset Name</th>
        <th>Asset Type Description</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.AssetName</td>
            <td>@item.AssetTypeDescription</td>
        </tr>
    }
</table>
